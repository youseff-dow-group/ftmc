                    <!-- HEADER SECTION -->
                    <div class="quotation-title">TECHNICAL OFFER</div>

                    <!-- QUOTATION HEADER SECTION WITH CLIENT INFO AND QUOTATION DETAILS SIDE BY SIDE -->
                    <table style="width: 100%;">
                        <tr>
                            <!-- Left Side: Client Info -->
                            <td width="50%" style="vertical-align: top;">
                                <div class="client-info">
                                    <strong>Quotation No.:</strong>
                                    <br/>
                                    <strong>
                                        <t t-esc="doc.name"/>
                                    </strong>
                                    <br/>
                                    <br/>

                                    <strong>Quoted to:</strong>
                                    <br/>
                                    <strong>
                                        <t t-esc="doc.partner_id.name"/>
                                    </strong>
                                    <br/>
                                    <t t-if="doc.partner_id.country_id">
                                        <t t-esc="doc.partner_id.country_id.name"/>
                                    </t>
                                    <br/>
                                    <br/>

                                    <strong>Date:</strong>
                                    <br/>
                                    <strong>
                                        <t t-esc="doc.date_order"/>
                                    </strong>
                                </div>
                            </td>

                            <!-- Right Side: Quotation Details Table (Bordered) -->
                            <td width="50%" style="vertical-align: top;">
                                <table class="info-table"
