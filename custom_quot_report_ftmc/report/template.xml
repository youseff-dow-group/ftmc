<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="new_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <style>
                        /* Typography */
                        .header-arabic {
                        text-align: right;
                        direction: rtl;
                        font-family: Arial;
                        font-size: 16px;
                        font-weight: bold;
                        }
                        .header-english {
                        text-align: left;
                        font-family: Arial;
                        font-size: 14px;
                        font-weight: bold;
                        }
                        .quotation-title {
                        text-align: center;
                        font-weight: bold;
                        font-size: 18px;
                        margin-top: 20px;
                        }
                        .project-name {
                        font-weight: bold;
                        margin: 10px 0;
                        }

                        /* Tables */
                        .table-details {
                        width: 100%;
                        border-collapse: collapse;
                        margin-bottom: 15px;
                        }
                        .table-details td {
                        padding: 3px;
                        vertical-align: top;
                        }
                        .item-table {
                        width: 100%;
                        border-collapse: collapse;
                        margin-top: 15px;
                        }
                        .item-table th, .item-table td {
                        border: 1px solid black;
                        padding: 5px;
                        }
                        .item-table th {
                        text-align: center;
                        font-weight: bold;
                        }
                        .item-table td {
                        text-align: left;
                        }
                        .item-table .number {
                        text-align: right;
                        }
                        .panel-header {
                        font-weight: bold;
                        background-color: #f2f2f2;
                        }

                        /* Lists and sections */
                        .terms-list {
                        margin-top: 15px;
                        padding-left: 20px;
                        }
                        .footer-section {
                        margin-top: 40px;
                        }
                        .signature-left {
                        float: left;
                        width: 45%;
                        }
                        .signature-right {
                        float: right;
                        width: 45%;
                        text-align: right;
                        }
                        .clearfix {
                        clear: both;
                        }

                        /* Component makes section */
                        .make-category {
                        font-weight: bold;
                        margin-top: 10px;
                        }
                        .make-description {
                        margin-left: 20px;
                        margin-bottom: 5px;
                        }

                        /* Spacing */
                        .section-margin {
                        margin-top: 20px;
                        }
                        .page-break {
                        page-break-after: always;
                        }
                    </style>

                    <!-- QUOTATION HEADER SECTION -->
                    <table style="width: 100%;">
                        <tr>
                            <!-- Left side: Client Information -->

                            <div>
                                <strong>Quoted to:</strong>
                            </div>
                            <div>
                                <strong>
                                    <t t-esc="doc.partner_id.name"/>
                                </strong>
                            </div>
                            <div>
                                <strong>Quotation No.:</strong>
                                <t t-esc="doc.name"/>
                            </div>
                            <div>
                                <strong>Date:</strong>
                                <t t-esc="doc.date_order"/>
                            </div>

                            <!-- Right side: Quotation Details Table -->
                            <td width="50%" style="vertical-align: top;">
                                <table style="width: 100%; border: 1px solid black; border-collapse: collapse;">
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <strong>Tel:</strong>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="doc.partner_id.phone"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <strong>Inquiry No.</strong>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="doc.origin"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <strong>Mob:</strong>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="doc.partner_id.mobile"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <strong>Inquiry Date:</strong>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="doc.inquiry_date" t-options="{'widget': 'date'}"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <strong>Fax:</strong>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="doc.partner_id.phone"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <strong>Prepared by:</strong>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="doc.prepared_by.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <strong>E-mail:</strong>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="doc.partner_id.email"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <strong>Inquiry No.:</strong>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <t t-esc="doc.origin"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>


                    <!-- PROJECT INFORMATION -->
                    <div>
                        <strong>Attention:</strong>
                    </div>
                    <div>
                        <strong>
                            <!--                            <t t-if="doc.contact" t-esc="doc.contact.name"/>-->
                        </strong>
                    </div>

                    <div class="project-name">PROJECT NAME :</div>
                    <div>
                        <t t-esc="doc.project_name"/>
                    </div>

                    <!-- SALUTATION -->
                    <div class="section-margin">
                        <strong>Dear Sir:</strong>
                        <br/>
                        Reference to your inquiry as stated above, please find our offer as follows:
                    </div>

                    <!-- CATEGORY SUMMARY TABLE -->
                    <table class="item-table"
                           style="width: 100%; border-collapse: collapse; border: 1px solid black; font-size: 14px;">
                        <thead>
                            <tr style="background-color: #f2f2f2; border: 1px solid black;">
                                <th style="border: 1px solid black; text-align: center;">S.No.</th>
                                <th style="border: 1px solid black; text-align: center;">Item Description</th>
                                <th style="border: 1px solid black; text-align: center;">Qty</th>
                                <th style="border: 1px solid black; text-align: center;">TOTAL PRICE</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="counter" t-value="1"/>
                            <t t-set="total_amount" t-value="0"/>
                            <t t-set="total_discount" t-value="0"/>

                            <t t-foreach="doc.get_category_summary()" t-as="category">
                                <tr>
                                    <td style="border: 1px solid black; text-align: center;">
                                        <t t-esc="counter"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <t t-esc="category['name']"/>
                                    </td>
                                    <td style="border: 1px solid black; text-align: center;">
                                        <t t-esc="category['qty']"/>
                                    </td>
                                    <td style="border: 1px solid black; text-align: right;">
                                        <t t-esc="category['amount']"
                                           t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                                <t t-set="counter" t-value="counter + 1"/>
                                <t t-set="total_amount" t-value="total_amount + category['amount']"/>
                                <t t-set="total_discount" t-value="total_discount + category.get('discount', 0)"/>
                            </t>

                            <!-- Empty row for spacing -->


                            <!-- Totals -->
                            <tr>
                                <td colspan="3" style="border: 1px solid black; text-align: right; font-weight: bold;">
                                    Gross Total:
                                </td>
                                <td style="border: 1px solid black; text-align: right; font-weight: bold;">
                                    <t t-esc="total_amount"
                                       t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="border: 1px solid black; text-align: right; font-weight: bold;">
                                    Other Discounts:
                                </td>
                                <td style="border: 1px solid black; text-align: right;">
                                    <t t-esc="total_discount"
                                       t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="border: 1px solid black; text-align: right; font-weight: bold;">
                                    Tax :
                                </td>
                                <td class="number">
                                    <t t-esc="total_amount - doc.amount_total"
                                       t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" style="border: 1px solid black; text-align: right; font-weight: bold;">
                                    Total Amount:
                                </td>
                                <td style="border: 1px solid black; text-align: right; font-weight: bold;">
                                    <t t-esc="doc.amount_total"
                                       t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" style="border: 1px solid black; font-weight: bold;">
                                    Amount in words:
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" style="border: 1px solid black; font-weight: bold;">
                                    <t t-esc="doc.currency_id.amount_to_text(doc.amount_total)"/>
                                    only
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- TERMS AND CONDITIONS -->
                    <div class="section-margin">
                        <strong>Terms and conditions:</strong>
                    </div>
                    <div>
                        <t t-esc="doc.note"/>
                    </div>


                    <!-- COMPONENT MAKES DETAILS -->
                    <div class="section-margin">
                        <strong>COMPONENT MAKES DETAILS:</strong>
                    </div>
                    <t t-set="category_makes_desc" t-value="doc.get_category_makes_with_descriptions()"/>
                    <t t-foreach="category_makes_desc.items()" t-as="category">
                        <t t-set="note_counter" t-value="1"/>
                        <div class="make-category">
                            <t t-esc="category[0]"/>:
                        </div>
                        <t t-foreach="category[1]" t-as="make">
                            <div class="make-description">
                                <span class="note-number"><t t-esc="note_counter"/>-
                                </span>
                                <t t-esc="make['description']"/>
                            </div>
                            <t t-set="note_counter" t-value="note_counter + 1"/>

                        </t>
                    </t>


                    <!-- Brand MAKES DETAILS -->
                    <div class="section-margin">
                        <strong>Technical Descriptions Details:</strong>
                    </div>
                    <t t-set="technical_description" t-value="doc.get_brand_makes_with_descriptions()"/>
                    <t t-foreach="technical_description.items()" t-as="category">
                        <t t-set="note_counter" t-value="1"/>
                        <div class="make-category">
                            <t t-esc="category[0]"/>:
                        </div>
                        <t t-foreach="category[1]" t-as="make">
                            <div class="make-description">
                                <span class="note-number"><t t-esc="note_counter"/>-
                                </span>
                                <t t-esc="make['name']"/>
                            </div>
                            <t t-set="note_counter" t-value="note_counter + 1"/>

                        </t>
                    </t>

                    <!-- PAGE BREAK -->
                    <div class="page-break"></div>

                    <!-- DETAILED PRODUCT TABLES BY CATEGORY -->
                    <t t-set="categories" t-value="doc.get_product_orderlines()"/>
                    <t t-foreach="categories.items()" t-as="category">
                        <table class="item-table section-margin">
                            <tr class="panel-header">
                                <td colspan="6">
                                    <t t-esc="category[0]"/>
                                </td>
                            </tr>
                            <tr>
                                <th>S.No.</th>
                                <th>Item Description</th>
                                <th>Qty</th>
                                <th>U/P</th>
                                <th>T/D</th>
                                <th>T/P</th>
                            </tr>
                            <t t-set="counter" t-value="1"/>
                            <t t-set="category_total" t-value="0"/>
                            <t t-set="entries" t-value="category[1]"/>
                            <t t-foreach="entries" t-as="entry">
                                <t t-foreach="entry['tasks']" t-as="task">
                                    <tr>
                                        <td class="number">
                                            <t t-esc="counter"/>
                                        </td>
                                        <td>
                                            <t t-esc="task['name']"/>
                                        </td>
                                        <td class="number">
                                            <t t-esc="task['quantity']"/>
                                        </td>

                                        <td class="number">
                                            <t t-esc="task['unit_price']"
                                               t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                        <td class="number">
                                            <t t-esc="task['total_discount']"
                                               t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                        <td class="number">
                                            <t t-esc="task['total_price_with_discount']"
                                               t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                    <t t-set="counter" t-value="counter + 1"/>
                                    <t t-set="category_total" t-value="category_total + task['total_price']"/>
                                </t>
                            </t>

                            <tr>
                                <td colspan="2">
                                    <strong>TOTAL</strong>
                                </td>
                                <td class="number">
                                    <t t-esc="task['total']"/>
                                </td>
                                <td></td>

                                <td></td>
                                <td class="number">
                                    <t t-esc="category_total"
                                       t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>

                            </tr>
                        </table>
                    </t>

                    <!-- SIGNATURE SECTION -->
                    <div class="section-margin">Thank You,</div>
                    <div>With Regards,</div>
                    <div>For Abu Dhabi Switchgear Factory LLC</div>

                    <!-- FINAL PAGE BREAK -->
                    <div class="page-break"></div>
                </t>
            </t>
        </t>
    </template>
