<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Discount Wizard Form View -->
    <record id="view_sale_order_discount_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.discount.wizard.form</field>
        <field name="model">sale.order.discount.wizard</field>
        <field name="arch" type="xml">
            <form string="Apply Discount by Category">
                <sheet>
                    <div class="oe_title">
                        <h1>Apply Discount by Product Category</h1>
                    </div>
                    <group>
                        <group>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="product_category_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="discount_amount" />
                            <field name="affected_bom_lines_count" readonly="1"/>
                        </group>
                    </group>
                    <group string="BOM Lines to be Updated">
                        <field name="current_bom_info" readonly="1" nolabel="1" widget="text"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_apply_discount" string="Apply Discount" type="object" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Sale Order Discount Wizard -->
    <record id="action_sale_order_discount_wizard" model="ir.actions.act_window">
        <field name="name">Apply Discount by Category</field>
        <field name="res_model">sale.order.discount.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_sale_order_id': active_id}</field>
    </record>
</odoo>
