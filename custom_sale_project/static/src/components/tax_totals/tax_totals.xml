<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="account_tax_totals_inherit_discount" inherit_id="account.TaxTotalsField">
        <!-- Inject the Discount row before the Total row -->
        <xpath expr="//tr[td/label[contains(text(), 'Total')]]" position="before">
            <tr t-if="totals.discount_total">
                <td class="o_td_label">
                    <label class="o_form_label o_tax_total_label" t-out="totals.discount_total.name"/>
                </td>
                <td class="o_list_monetary">
                    <span t-out="totals.discount_total.formatted_amount"
                          style="white-space: nowrap; font-weight: bold;"/>
                </td>
            </tr>
        </xpath>
    </template>
</odoo>
