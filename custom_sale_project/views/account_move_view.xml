<odoo>
    <record id="view_invoice_form_inherited" model="ir.ui.view">
        <field name="name">Account Invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="tax_ids" position="after">
                <field name="discount_amount" readonly="1"/>
                <field name="actual_weight" optional="show"/>
                <field name="net_weight" optional="show"/>
                <field name="gross_weight" optional="show"/>
                <field name="country_of_origin_ids" widget="many2many_tags" optional="show"/>
                <field name="remarks" optional="show"/>
                <field name="hs_code" optional="show"/>
            </field>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="picking_id" options="{'no_create': True}"/>
            </xpath>
        </field>


    </record>
</odoo>
