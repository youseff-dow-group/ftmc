<odoo>
    <record id="view_order_form_inherited" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.project</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">




            <xpath expr="//field[@name='order_line']//tree/field[@name='product_template_id']" position="after">


                <field name="task_count" string="Boms"/>

                <button name="action_view_tasks" type="object"
                        class="btn-link"
                        string="Boms"
                        attrs="{'invisible': [('task_count', '=', 0)]}"
                        icon="fa-tasks">
                    <field name="task_count" string="Boms" column_invisible="1"/>
                </button>
                <button name="%(action_sale_line_margin_wizard)d"
                        type="action"
                        icon="fa-percent"
                        string="Apply Margin"
                        context="{'default_sale_line_id': id}"
                        invisible="task_count == 0"/>
                  <button name="%(action_sale_line_discount_wizard)d"
                        string="Apply Discount"
                        type="action"
                        class="btn-secondary"
                        icon="fa-minus-circle"
                        help="Apply discount percentage to all related tasks"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_project"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-folder">
                    <field name="project_id" widget="statinfo"/>
                </button>


                <button name="action_view_tasks"
                        type="object"
                        class="btn-link"
                        string="Boms"
                        icon="fa-tasks">
                    <field name="task_count" string="Boms" widget="statinfo"/>
                </button>

                <button name="action_print_costing_report"
                        type="object"
                        string="Print Costing Report"
                        class="btn-secondary"
                        icon="fa-file-excel-o"
                        help="Generate and download Excel costing sheet report"/>
            </xpath>

            <header>
                <button name="action_create_sale_project" type="object"
                        string="Create Assembly" class="btn-primary"/>

                <button name="action_update_lines_from_tasks" type="object"
                        string="Update Lines from Boms"
                        class="btn-secondary"
                        invisible="project_id == 'False'"
                        help="Update sale order lines quantity and price based on related tasks"/>
                <button name="%(action_sale_order_discount_wizard)d"
                        string="Apply Category Discount"
                        type="action"
                        class="btn-secondary"
                        icon="fa-tags"
                        invisible="not project_id"
                        help="Apply discount to BOM lines by product category"/>
            </header>

            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="discount_amount" column_invisible="True"/>
                <field name="discount_value"/>
            </xpath>

            <xpath expr="//group[@name='note_group']/group[@name='sale_total']" position="inside">
                <field name="total_discount"/>

            </xpath>


        </field>


    </record>

</odoo>
