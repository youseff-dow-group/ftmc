<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_journal_entries">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <style>
                            /* ===== General Font Settings ===== */
                            body, table, td, th, p, span {
                            font-family: "Arial", sans-serif;
                            font-size: 15px !important; /* Bigger font for all text */
                            color: #333;
                            }

                            /* ===== Header Title ===== */
                            .journal-entry-title {
                            text-align: center;
                            color: #E74C1A;
                            font-weight: 700;
                            font-size: 28px; /* Larger title */
                            margin-bottom: 20px;
                            }

                            /* ===== Top Info Table ===== */
                            .journal-header-table {
                            width: 100%;
                            border-collapse: separate;
                            border-spacing: 0;
                            border: 1px solid #e1e1e1;
                            border-radius: 10px;
                            background-color: #fff;
                            overflow: hidden;
                            }

                            .journal-header-table td {
                            border: 1px solid #e1e1e1;
                            padding: 10px 12px;
                            font-size: 15px;
                            vertical-align: middle;
                            }

                            .journal-header-table strong {
                            color: #000;
                            font-weight: 600;
                            }

                            /* ===== Lines Table ===== */
                            .journal-lines-table {
                            width: 100%;
                            border-collapse: separate;
                            border-spacing: 0;
                            border: 1px solid #E74C1A;
                            border-radius: 10px;
                            overflow: hidden;
                            margin-top: 20px;
                            font-size: 15px;
                            }

                            .journal-lines-table th {
                            background-color: #E74C1A;
                            color: white;
                            text-transform: uppercase;
                            padding: 12px 10px;
                            border: 1px solid #E74C1A;
                            text-align: left;
                            font-size: 16px;
                            font-weight: 600;
                            }

                            .journal-lines-table td {
                            border: 1px solid #f0f0f0;
                            padding: 10px 12px;
                            vertical-align: middle;
                            }

                            .journal-lines-table tr:nth-child(even) {
                            background-color: #fafafa;
                            }

                            .text-end {
                            text-align: right;
                            }

                            /* ===== Total Row ===== */
                            .total-row td {
                            border-top: 2px solid #E74C1A;
                            font-weight: bold;
                            background-color: #fff7f5;
                            font-size: 16px;
                            }

                            /* ===== Rounded Corners Fix ===== */
                            .journal-lines-table,
                            .journal-header-table {
                            -webkit-border-radius: 10px;
                            -moz-border-radius: 10px;
                            border-radius: 10px;
                            }

                            /* ===== Optional Shadow for PDF elegance ===== */
                            .journal-lines-table {
                            box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.1);
                            }
                        </style>

                        <!-- ===== Title ===== -->
                        <div>
                            <h2 class="journal-entry-title">Journal Entry</h2>
                        </div>

                        <!-- ===== Top Info Table ===== -->
                        <table class="journal-header-table">
                            <tbody>
                                <tr>
                                    <td>
                                        <strong>Journal Entry :</strong>
                                    </td>
                                    <td>
                                        <p t-field="o.name"/>
                                    </td>
                                    <td>
                                        <strong>Journal :</strong>
                                    </td>
                                    <td>
                                        <p t-field="o.journal_id"/>
                                    </td>
                                    <td>
                                        <strong>Company:</strong>
                                    </td>
                                    <td>
                                        <p t-field="o.company_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Date :</strong>
                                    </td>
                                    <td>
                                        <p t-field="o.date"/>
                                    </td>
                                    <td>
                                        <strong>Reference :</strong>
                                    </td>
                                    <td colspan="3">
                                        <p t-field="o.ref"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <br/>

                        <!-- ===== Journal Lines ===== -->
                        <t t-set="display_partner" t-value="any(l.partner_id for l in o.line_ids)"/>

                        <table class="journal-lines-table">
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <th t-if="display_partner">Partner</th>
                                    <th>Label</th>
                                    <th class="text-end">Debit</th>
                                    <th class="text-end">Credit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="current_debit" t-value="0"/>
                                <t t-set="current_credit" t-value="0"/>

                                <t t-foreach="o.line_ids" t-as="line">
                                    <t t-set="current_debit" t-value="current_debit + line.debit"/>
                                    <t t-set="current_credit" t-value="current_credit + line.credit"/>

                                    <tr>
                                        <td>
                                            <span t-field="line.account_id"/>
                                        </td>
                                        <td t-if="display_partner">
                                            <span t-field="line.partner_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.name"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.debit"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.credit"/>
                                        </td>
                                    </tr>
                                </t>

                                <tr class="total-row">
                                    <td colspan="3" class="text-end">Total</td>
                                    <td class="text-end">
                                        <strong>
                                            <span t-out="current_debit"
                                                  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </strong>
                                    </td>
                                    <td class="text-end">
                                        <strong>
                                            <span t-out="current_credit"
                                                  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
